        <CheckBox x:Name="depthCheckBox" Content="Depth" HorizontalAlignment="Left" Margin="348,160,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="irCheckBox" Content="IR" HorizontalAlignment="Left" Margin="348,182,0,0" VerticalAlignment="Top"/>
